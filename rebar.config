% -*- Erlang -*-
% vim: ts=4 sw=4 et ft=erlang
%{erl_opts, [{parse_transform, stacktrace_transform}]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.
{pre_hooks,[
        {"linux|bsd|darwin|solaris", compile, "priv/compat.escript"},
        {"win32", compile, "escript.exe priv\\compat.escript"}
]}.

{deps, [
    rekt,
    {simple_bridge, {git, "https://github.com/nitrogen/simple_bridge", {branch, master}}},
    nitro_cache,
    nprocreg,
    canister,
    qdate,
    {erlang_ds, "~> 0.3"}
]}.

{dialzyzer, [
    {base_plt_apps, [
        nprocreg,
        simple_bridge,
        nitro_cache,
        canister,
        qdate,
        erlang_ds
    ]}
]}.
    
